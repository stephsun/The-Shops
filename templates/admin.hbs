{{#extend "javascripts"}}
    <script type="text/javascript" src="/javascripts/jquery.tabledit.min.js"></script>
    <script type="text/javascript" src="/javascripts/main.js"></script>
{{/extend}}

{{#extend "stylesheets"}}
    <link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
{{/extend}}

<div id="wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <ul class="nav nav-tabs">
                    <li role="presentation">
                        <a href="/"><span class="glyphicon glyphicon-ice-lolly"></span></a>
                    </li>
                </ul>

                <table id="tabledit" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>NAME</th>
                            <th>DISPLAY NAME</th>
                            <th>URL</th>
                            <th>RANK</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        {{#each brands}}
                        <tr>
                            <td>{{_id}}</td>
                            <td>{{name}}</td>
                            <td>{{longName}}</td>
                            <td>{{url}}</td>
                            <td>{{rank}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>