{{#extend "stylesheets"}}
    <link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
{{/extend}}

<div id="wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <ul class="nav nav-tabs">
                    <li role="presentation">
                        <a href="/" id="menu-toggle"><span class="glyphicon glyphicon-ice-lolly"></span></a>
                    </li>
                </ul>

                <div class="alert {{#if isSuccessful}} alert-success {{else}} alert-danger {{/if}}" role="alert" {{#unless message}} style="display: none;"{{/unless}}>{{message}}</div>

<form action="/admin" method="post">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th data-field="name">Name</th>
                            <th data-field="url">Link</th>
                            <th data-field="order">Order</th>
                            <th data-field="actions">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <input type="text" class="form-control" id="brandName" name ="longName" placeholder="e.g., J.CREW. The brand name you typed will appear exactly the same in the sidebar">
                            </td>
                            <td>
                                <input type="url" class="form-control" id="brandUrl" name="url" placeholder="e.g., https://www.jcrew.com/">
                            </td>
                            <td>
                            </td>
                            <td>
                                <button type="submit" class="btn btn-default">Save</button>
                            </td>
                        </tr>
                        {{#each brands}}
                        <tr>
                            <td>{{longName}}</td>
                            <td>{{url}}</td>
                            <td>{{rank}}</td>
                            <td>
                                <div class="btn-group" role="group" aria-label="...">
                                  <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil"></span></button>
                                  <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-trash"></span></button>
                                </div>
                            </td>
                        </tr>
                        {{/each}}
                    <tbody>
                </table>
</form>
            </div>
        </div>
    </div>
</div>